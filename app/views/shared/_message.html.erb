<div class="message-info">
    <div class="message-upp">
    <div class="message-user">
      <%= message.user.nickname %>
    </div>
    <div class="message-date">
       <%= l message.created_at %>
    </div>
    </div>

    <div class="message-down">
    <div class="message-top">
    <div class="message-content">
      <%= message.content %>
       </div>
       <div class="message-delete">
      <%= link_to "削除", message_path(message), method: :delete,  class:"message-destroy-btn"%>
      </div>
      </div>
    <div class="message-image">
      <%= image_tag message.image.variant(resize: '200x200'), class: 'message-image' if message.image.attached? %>
    </div>
    </div>

   
  </div>

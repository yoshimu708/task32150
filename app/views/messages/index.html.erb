 <%= render "shared/header" %>


<div class="main">
   <div class="side-bar">
  <div class="side-bar-title">
  <h4 class="side-bar-text">ROOM</h4>
  </div>
  <div class="side-bar-main">
    <%= render "messages/side_bar" %>
  </div>
  </div>


  <div class="main-task-chat">
  <div class="task-chat">


<div class="chat-header">
   <div class="left-header">
   <div class="task-chat-room-name">
      <%= @room.name %>
      </div>
    </div>
  <div class="right-header">
      <%= link_to "ROOM DELETE", room_path(@room), method: :delete,class:"room-delete" %>
  </div>
  </div>

   <div class="task-chat-selector">
   <div class="task-selector">
   <%= link_to "task", room_tasks_path(@room),class:"selector" %>
   </div>
   <div class="chat-selector">
   <%= link_to "chat", room_messages_path(@room),class:"selector" %>
   </div>
   </div>

   
  <div class="messages-position">
  <%= render "shared/main_chat" %>
  </div>
  
  <div class="form-position">
  <%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>
</div>



  </div>
  </div>

</div>